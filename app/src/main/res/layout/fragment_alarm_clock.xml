<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmClockFragment">


    <EditText
        android:id="@+id/Godzina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/set_alarm_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="166dp"
        android:text="Na którą godzinę" />

    <EditText
        android:id="@+id/Minuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/set_alarm_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="99dp"
        android:text="Na którą minutę" />

    <Button
        android:id="@+id/set_alarm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="251dp"
        android:onClick="onSetAlarmClick"
        android:text="Set Alarm" />

    <TextView
        android:id="@+id/AlarmClock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Alarm Clock"
        android:textSize="35sp" />

</RelativeLayout>